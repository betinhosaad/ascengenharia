<p id="notice"><%= notice %></p>

<h1>Listing Obras</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Locale</th>
      <th>Start date</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @obras.each do |obra| %>
      <tr>
        <td><%= obra.name %></td>
        <td><%= obra.locale %></td>
        <td><%= obra.start_date %></td>
        <td><%= obra.description %></td>
        <td><%= obra.user.email %></td>
        <td><%= link_to 'Show', obra %></td>
        <td><%= link_to 'Edit', edit_obra_path(obra) %></td>
        <td><%= link_to 'Destroy', obra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

