<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">

      <div class="navbar nav_title" style="border: 0;">
        <%= link_to root_url, class: 'site_title' do %>
          <%= image_tag("logo.png", alt: "logo", height: '100%') %> <span>ASC Engenharia</span>
        <% end %>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="row">
        <div class="profile_info col-xs-offset-1">
          <span>Seja bem-vindo,</span>
          <h2><%= current_user.email %></h2>
        </div>
      </div>
      <!-- /menu profile quick info -->
      
      <div class="ln_solid"></div>


      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
        <div class="menu_section">
          <%= link_to root_url do %>
          <h3>Minhas Obras</h3>
          <% end %>
          <ul class="nav side-menu">
             <% current_user.obras.each do |obra| %> 
                <li>
                  <%= link_to obra_path(obra) do %>
                  <i class="fa fa-home"></i>  <%= obra.name %>
                  <% end %>
                  <ul class="nav child_menu" style="display: block">
                    <li><%= link_to "Acompanhamento", obra_acompanhamento_path(obra) %>
                    </li>
                    <li><%= link_to "Galeria", obra_galeria_path(obra) %>
                    </li>
                    <li><%= link_to "Documentos", obra_docs_path(obra) %>
                    </li>
                    <li><%= link_to "Pagamentos", obra_boletos_path(obra) %>
                    </li>
                  </ul>
                </li> 
            <% end %>
          </ul>
        </div>
      </div>
      <!-- /sidebar menu -->

    </div>
  </div>
